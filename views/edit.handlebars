
  <div class="post-card">
    <h2 class="page-title">Edit Post</h2>
    <form class="form editPost-form">
      <div class="form-group">
        <label for="title-post">Title:</label>
        <input type="hidden" name="post-id" id="post-id" value="{{post.id}}" />
        <input class="form-input" type="text" id="post-title" value="{{post.title}}" />
      </div>
      <div class="form-group">
        <label for="description-post">Description:</label>
        <textarea id="post-description" >{{post.description}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn1" id="update-button" type="Update">Update</button>
      </div>
      <div class="form-group">
        <button class="btn btn1" id="delete-button" type="Delete">Delete</button>
      </div>
    </form>
  </div>

  <script src="/js/edit.js"></script>