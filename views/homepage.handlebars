{{#each posts as |post|}}
  <div class="login-card col-12">
    <a href="/post/{{id}}">
      <div class="card-header">
        <h2> {{post.title}}</h2>
        <p>{{post.user.username}} {{format_date post.date_created}}</p> 
      </div>
      <div class="card-body">
        <p>{{post.description}}</p>
      </div>
    </a>
  </div>
{{/each}}