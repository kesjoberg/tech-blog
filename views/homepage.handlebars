<section class="container" style="align-items-center">
{{#each posts as |post|}}
  <div class="card">
    <a href="/post/{{id}}">
      <div class="card-header">
        <h3> {{post.title}}</h3>
        <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p> 
      </div>
      <div class="card-body">
        <p>{{post.description}}</p>
      </div>
    </a>
  </div>
{{/each}}
</section>